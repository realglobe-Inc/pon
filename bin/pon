#!/usr/bin/env node

/**
 * Command line interface of pon.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const pon = require('pon-cli')

program
  .version(pkg[ 'version' ])
  .usage('[options] <name> ')
  .description(pkg[ 'description' ])
  .option('-l, --list [list]', 'List available tasks')
program.parse(process.argv)

// Run main command
pon.apply(pon, program.args.concat({
  list: program.list})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
